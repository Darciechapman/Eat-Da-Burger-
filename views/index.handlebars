<h1>BURGERS</h1>

<ul>
  	{{#each burgers}}
  	{{#unless devoured}}
  	<li>
       <p>{{this.id}} burger: {{this.burger_name}}</p>
	   <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
	   data-newDevoured="{{devour}}"></button>
  	</li>
	{{/unless}}
  	{{/each}}
</ul>

<ul>
  	{{#each burgers}}
  	{{#if devoured}}
  	<li>
       <p>{{this.id}} burger: {{this.burger_name}}</p>
	   <button type="button" class="trashburger btn btn-warning" id="trashbutton" data-id="{{this.id}}"
	   data-newDevoured="{{devour}}"></button>
  	</li>
	{{/if}}
  	{{/each}}
</ul>

<form class="create-form">
    <div class="form-group">
        <label for="newburger">Order Burger</label>
        <input type="text" id="newburger" name="burger">
		<button type="submit" class="btn btn-success" id="addburger"></button>
	</div>
</form>
